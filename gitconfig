[user]
	name = HOMMA Takashi
	email = hommatks@gmail.com
[core]
	editor = vim -c \"set fenc=utf-8\"
	attributesfile = ~/.gitattributes
[alias]
	co = "!f(){ git checkout $*;git submodule update --init;git config branch.\"$(git rev-parse --abbrev-ref HEAD)\".description;};f"
	br = branch
	ci = commit
	st = status
	sm = submodule
	mt = mergetool
	d = difftool
	l = log --graph -n 30 --date=iso --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %ad%x08%x08%x08%x08%x08%x08%x08%x08%x08%Creset'
	ll = log --graph -n 200 --date=iso --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %ad%x08%x08%x08%x08%x08%x08%x08%x08%x08%Creset'
	s = status --short --branch
	sl = !sh -c '/usr/local/src/smartgit/bin/smartgit.sh --log \"$(git rev-parse --show-toplevel)\"' &
	kr = !sh -c 'gitkraken --path \"$(git rev-parse --show-toplevel)\"' > /dev/null &
	cpush = "!f(){ if [ \"$1\" = \"-f\" ]; then ARGS=\"$1 ${2:-origin}\"; else ARGS=${1:-origin}; fi; git push $ARGS `git rev-parse --abbrev-ref HEAD`;};f"
	pr = "!f(){ REMOTEURL=`git remote -v|grep ${1:-origin}|grep push|sed -e \"s/\\.git .*$//g\"|sed -e \"s/^.*@//g\"`;open https://`echo $REMOTEURL | sed -e \"s/:/\\//g\"`/compare/`git rev-parse --abbrev-ref HEAD`\"?expand=1#start-of-content\";};f"
[push]
	default = simple
[fetch]
	prune = true
[difftool "kdiff3"]
    path = /usr/bin/kdiff3
    trustExitCode = false
[difftool]
    prompt = false
[diff]
    tool = vimdiff
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
	keepBackup = false
[rebase]
	autosquash = true
[diff "tika"]
	textconv = tika -t
[ghq]
	root = ~/go/src
